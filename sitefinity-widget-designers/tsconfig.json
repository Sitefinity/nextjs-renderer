{
    "compilerOptions": {
      "baseUrl": "./src",
      "outDir": "dist",
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "target": "ESNext",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "declaration": true,
      "experimentalDecorators": true
    },
    "files": ["./index.ts"],
    "include": ["./src/**/*.ts", "./index.ts"],
    "exclude": ["node_modules", "./lib/"]
  }
