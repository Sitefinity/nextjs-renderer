{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "outDir": "../../../dist",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "declaration": true,
        "incremental": true,
        "experimentalDecorators": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
